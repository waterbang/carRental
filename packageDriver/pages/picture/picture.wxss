.picture .submit {
  width: 100%;
  position: fixed;
  bottom: 0;
  overflow: hidden;
  z-index: 99;
}

.picture .submit .off-runtime {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
}
.picture .submit .off-runtime .sub-off {
  width: 100%;
}


.btn-text {
  color: #ff992a;
  padding: 0;
  margin: 0;
  font-size: 12px;
}

.car-base-btn {
  border: 2rpx solid #ff992a !important;
