/* components/coupon/index.wxss */
.coupon-contant {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10rpx 0;
}
.coupon {
  display: flex;
  position: relative;
  width: 90%;
  height: 100px;
  margin: 20rpx 0;
  filter: drop-shadow(2px 2px 3px #999);
}

