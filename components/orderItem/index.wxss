/* components/indexList/index.wxss */
.status-show {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-item {
  margin: 10rpx auto;
  background-color: white;
  width: 97%;
}
.item-img {
  height: 220rpx;
}

.item .title-header{
  font-weight: 600;
}

.content .title {
  font-size: 12px;
}

.content .car .address, .content .car .time {
  font-size: 12px;
  color: #949494;
  height: 35rpx;
  width: 400rpx;
  overflow: hidden; white-space: nowrap; text-overflow: ellipsis;
}

.content .btn {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}