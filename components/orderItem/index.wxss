/* components/indexList/index.wxss */
.body {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f0f0f0;
}

.list-item {
  margin: 10rpx auto;
  background-color: white;
  width: 97%;
}

.item .title-header{
  font-weight: 600;
}

.content .title {
  font-size: 12px;
}

.content .car .address, .content .car .time {
  font-size: 12px;
  color: #949494;
}

.content .btn {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-around;
}